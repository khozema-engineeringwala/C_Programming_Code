    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("values of matrix arr[%d][%d]",i,j);
            scanf("%d",&arr[i][j]);
            
        }
    }
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("%d",arr2[i][j]);
    }
    printf(" \n ");
    }
      for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("values of matrix arr2[%d][%d]",i,j);
            scanf("%d",&arr2[i][j]);
            
