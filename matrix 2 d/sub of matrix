#include <stdio.h>
 int main(){
    int n,m,i,j;
    printf("number row and column");
    scanf("%d%d",&n,&m);
    int arr[n][m],arr2[n][m],sub[n][m];
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("values of matrix arr[%d][%d]",i,j);
            scanf("%d",&arr[i][j]);
            
        }
    }
   for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("%d",arr[i][j]);
    }
    printf(" \n ");
    }
      for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("values of matrix arr2[%d][%d]",i,j);
            scanf("%d",&arr2[i][j]);
            
        }
    }
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            printf("%d",arr2[i][j]);
    }
    printf(" \n ");
    
    }
    sub[i][j]=arr[i][j]-arr2[i][j];;
    for(i=0;i<n;i++){
    for(j=0;j<m;j++){
    printf("sub of matrix%d",sub[i][j]);
}
printf(" \n ");
}
    return 0;
    }
