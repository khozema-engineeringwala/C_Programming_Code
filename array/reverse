#include <stdio.h>
int main()
{
int i,n;
printf("elements to store in the array :");
scanf("%d",&n);
int a[n];
printf(" %d:",n);
for(i=0;i<n;i++)
{
printf("element %d  ",i);
scanf("%d",&a[i]);
}
printf("number in array");
for(i=0;i<n;i++)
{
printf("%d",a[i]);
}
printf(" array in reverse are");
for(i=n-1;i>=0;i--){
printf("%d",a[i]);
}
