#include <stdio.h>

int main()
{
    for(int i=0; i<5; i++){
        for(int j=0;j<5;j++){
            if(i+j>=4)   
                printf(" * ",i,j);
            else
                printf("    ");
        }
            if(i==5 || j==0 || i+j==4)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
}
