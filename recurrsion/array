#include <stdio.h>
void printArray(int arr[size], int start, int size)
{
    if(start >= size)
        return;
    printf("%d, ", arr[start]);
    printArray(arr, start + 1, size); 
}
int main()
{
    int size, i;
    scanf("%d", &size);
    printf("Enter elements in the array: ");
    for(i=0; i<size; i++) 
    {
        scanf("%d", &arr[i]);
    }
        
    printf("Elements in the array: ");
    printArray(arr, size);
    
    return 0;
}
